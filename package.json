{
  "name": "@hyrious/esbuild-dev",
  "version": "0.5.2",
  "description": "Just esbuild --build.",
  "repository": "hyrious/esbuild-dev",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "bin": "dist/bin.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./args": "./dist/args.mjs"
  },
  "types": "src/index.ts",
  "sideEffects": false,
  "files": [
    "src",
    "dist",
    "args.d.ts"
  ],
  "scripts": {
    "build": "make && make args.d.ts",
    "test:esm": "node dist/bin.mjs -p:./test/example-plugin.ts test/index.ts",
    "test:cjs": "node dist/bin.mjs --cjs -p:./test/example-plugin.ts test/index.ts"
  },
  "keywords": [
    "cli",
    "esbuild"
  ],
  "author": "hyrious <hyrious@outlook.com>",
  "license": "MIT",
  "engines": {
    "node": ">=14.8.0"
  },
  "dependencies": {
    "esbuild": "^0.14.0"
  },
  "devDependencies": {
    "@types/node": "^16.11.10"
  }
}
