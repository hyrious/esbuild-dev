{
  "name": "@hyrious/esbuild-dev",
  "type": "module",
  "version": "0.10.5",
  "description": "Build and run your script.ts with esbuild",
  "author": "hyrious <hyrious@outlook.com>",
  "license": "MIT",
  "repository": "hyrious/esbuild-dev",
  "keywords": [
    "cli",
    "esbuild"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./args": {
      "default": "./dist/args.js",
      "types": "./src/args.ts"
    },
    "./loader": "./dist/loader.js",
    "./package.json": "./package.json"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "src/index.ts",
  "bin": "dist/bin.js",
  "files": [
    "src",
    "dist",
    "args.d.ts"
  ],
  "engines": {
    "node": "^14.18 || >=16"
  },
  "scripts": {
    "build": "esbuild scripts/build.ts | node --input-type=module",
    "flags": "esbuild scripts/flags.ts | node --input-type=module",
    "docs": "vitepress build docs",
    "docs:dev": "vitepress dev docs"
  },
  "peerDependencies": {
    "esbuild": ">=0.17"
  },
  "devDependencies": {
    "@types/node": "^18.19.33",
    "esbuild": "^0.20.2",
    "undici": "^6.18.0",
    "vitepress": "^1.2.2"
  }
}
