{
    "name": "@hyrious/esbuild-dev",
    "version": "0.1.1",
    "description": "Just esbuild + chokidar.",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "esbuild-dev": "dist/bin.js"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build:build": "esbuild src/build.ts --bundle --platform=node --external:esbuild --outdir=dist --minify --sourcemap=inline",
        "build:all": "node --enable-source-maps dist/build.js",
        "build:clean": "rimraf dist/build.js",
        "build": "run-s build:build build:all build:clean"
    },
    "repository": "hyrious/esbuild-dev",
    "keywords": [
        "cli",
        "esbuild"
    ],
    "author": "hyrious <hyrious@outlook.com>",
    "license": "MIT",
    "engines": {
        "node": ">=14.0.0"
    },
    "dependencies": {
        "chokidar": "latest",
        "esbuild": "latest",
        "minimist": "latest",
        "tempy": "latest"
    },
    "devDependencies": {
        "@types/lodash.debounce": "^4.0.6",
        "@types/lodash.isequal": "^4.5.5",
        "@types/minimist": "^1.2.1",
        "@types/node": "^14.14.21",
        "builtin-modules": "^3.2.0",
        "lodash.debounce": "^4.0.8",
        "lodash.isequal": "^4.5.0",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "typescript": "^4.1.3"
    }
}
